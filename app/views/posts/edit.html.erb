<%= stylesheet_link_tag "posts", :media => "all" %>
<input type="hidden" id="id" value="<%= @data.mid %>">
<div id="edit">
  <div class="content content-style text-vertical">
    <div class="bg">
      <div class="msg placeMsg" contenteditable="true" onFocus="clearText('msg');" onblur="setPlaceholder('msg');"><%= @data.content %></div>
      <div class="person placePsn" contenteditable="true" onFocus="clearText('psn');" onblur="setPlaceholder('psn');"><%= @data.name %></div>
    </div>
  </div>
  <div class="buttons">
    <button class="btn button-black-white" onclick="this.disabled = true; newUpdate();">更新</button>
    <% pass = "/list/#{@data.pid}/personDetails" %>
    <button class="btn button-black-white" onclick="this.disabled = true; pageChange('<%= pass %>');">戻る</button>
  </div>
</div>