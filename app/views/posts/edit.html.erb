<%= stylesheet_link_tag "posts", :media => "all" %>
<input type="hidden" id="id" value="<%= @data.mid %>">
<div id="edit" class="edit">
  <div class="content">
    <div class="msg placeMsg" contenteditable="true" onFocus="clearMsg();" onblur="checkMsg();"><%= @data.content %></div>
    <div class="person placePsn" contenteditable="true" onFocus="clearPsn();" onblur="checkPsn();"><%= @data.name %></div>
  </div>
  <div class="buttons">
    <button class="btn" onclick="this.disabled = true; newUpdate();">更新</button>
    <% pass = "/list/#{@data.pid}/personDetails" %>
    <button class="btn" onclick="this.disabled = true; pageChange('<%= pass %>');">戻る</button>
  </div>
</div>